#include <iostream>
#include <stack>
using namespace std;

int main() {
	int n,res=0;

	cin >> n;
	stack<int> s;
	for (int i = 0; i < n; i++) {
		int num;
		cin >> num;
		res += s.size();
		while (!s.empty()) {
			if (s.top() < num) s.pop();
			else break;
		}
		s.push(num);
	}

	cout << res;
} 

// 예제의 결과는 출력 가능.
