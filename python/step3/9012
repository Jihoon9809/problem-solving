n = int(input())

for _ in range(n):
    arr = list(list(input()))
    res = []
    for i in arr :
        if i == '(' : res.append('(')
        else : 
            if len(res) == 0 or res[-1] == ')' : res.append(')')
            else : res.pop()
    if len(res) == 0 : print('YES')
    else :print('NO')

    
